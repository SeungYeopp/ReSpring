pipeline {
    agent any
    environment {
        ENV_FILE = credentials('project-env')
    }
    tools {
        dockerTool 'DefaultDocker'
    }
    stages {
        stage('Setup Environment') {
            steps {
                script {
                    sh 'cp $ENV_FILE ./backend/.env'
                    sh 'cp $ENV_FILE ./frontend/.env'
                }
            }
        }
        stage('Backend Build') {
            steps {
                dir('backend') {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
            }
        }
        stage('Frontend Build') {
            tools {
                nodejs "NodeJS-20"
            }
            steps {
                dir('frontend') {
                    sh '''
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage('Docker Compose (Test)') {
            steps {
                script {
                    sh '''
                    docker-compose up -d --build --no-deps backend frontend
                    '''
                }
            }
        }
        stage('Check Running Containers') {
            steps {
                script {
                    sh 'docker ps -a'
                }
            }
        }
    }
    post {
        always {
            script {
                sh '''
                echo "ðŸ›‘ Cleaning up test containers..."
                docker-compose down || true
                '''
            }
        }
    }
}
